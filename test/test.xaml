<Canvas xmlns="http://schemas.microsoft.com/client/2007"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="500" Height="380">
  <Canvas Background="#33333333" Width="120" Height="120" Canvas.Top="0" Canvas.Left="0" x:Name="canvas">
    <Canvas.RenderTransform>
      <TransformGroup>
        <RotateTransform CenterX="50" CenterY="50" Angle="20"/>
        <ScaleTransform CenterX="50" CenterY="50" ScaleX="1"/>
        <TranslateTransform X="0" Y="0" />
      </TransformGroup>
    </Canvas.RenderTransform>

    <Rectangle Canvas.Top="50" Canvas.Left="50" x:Name="xform" Stroke="#80808080" Width="150" Height="30">
    </Rectangle>
  </Canvas>
</Canvas>

