	<StackPanel Grid.Column="1">
		<TextBlock>ItemsControl (non-databound)</TextBlock>
		<Button Content="Add Button" Click="button_Click" />
		<Border BorderBrush="Black" BorderThickness="2" Width="100" Height="100">
		    <ItemsControl x:Name="itemsControl">
 	    	    	<Button Content="Button1" />
	    	    	<sys:String>String</sys:String>
 		    </ItemsControl>
		</Border>
	</StackPanel>

	<StackPanel Grid.Column="2">
		<TextBlock>ItemsControl (non-databound)</TextBlock>
		<Button Content="Add String" Click="databoundButton_Click" />
		<Border BorderBrush="Black" BorderThickness="2" Width="100" Height="100">
		    <ItemsControl x:Name="databoundItemsControl" />
		</Border>
	</StackPanel>
    </Grid>
</UserControl>
