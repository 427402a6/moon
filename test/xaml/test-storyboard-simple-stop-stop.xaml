<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Rectangle x:Name="rect" Fill="Red" Width="50" Height="50" Canvas.Top ="10" Canvas.Left="10" />
	
	<Canvas.Triggers>
		<EventTrigger RoutedEvent="Canvas.Loaded">
			<EventTrigger.Actions>
				<BeginStoryboard>
					<Storyboard FillBehavior="Stop">
						<DoubleAnimation Storyboard.TargetName="rect" Storyboard.TargetProperty="(Canvas.Left)" From="10" To="100" Duration="0:0:2" FillBehavior="Stop"/>
					</Storyboard>
				</BeginStoryboard>
			</EventTrigger.Actions>
		</EventTrigger>
	</Canvas.Triggers>	

</Canvas>
