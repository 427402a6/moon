<Canvas xmlns="http://schemas.microsoft.com/client/2007"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="640" Height="480"
	Background="White">
  <Canvas.RenderTransform>
    <ScaleTransform x:Name="NotesScale" CenterX="640" ScaleX="0" />
  </Canvas.RenderTransform>
  <Canvas.Triggers>
    <EventTrigger RoutedEvent="Canvas.Loaded">
      <BeginStoryboard>
        <Storyboard x:Name="Movement">
          <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="NotesScale" Storyboard.TargetProperty="ScaleX">
            <SplineDoubleKeyFrame KeyTime="00:00:1" Value="0"/>
            <SplineDoubleKeyFrame KeyTime="00:00:4" Value="1"/>
          </DoubleAnimationUsingKeyFrames>
        </Storyboard>
      </BeginStoryboard>
    </EventTrigger>
  </Canvas.Triggers>
  <TextBlock x:Name="NotesTitle" Canvas.Left="6" Canvas.Top="3" FontWeight="Bold" IsHitTestVisible="False" Text="Moonlight in 21 Days" />
</Canvas>
