#!/bin/sh
EXEC="exec "

if test x$1 = x--uninstalled; then
   UNINSTALLED="yes"
   shift
fi

if test x$1 = x--debug; then
   DEBUG=--debug
   shift
fi

if test x$1 = x--gdb; then
   shift
   EXEC="gdb --eval-command=run --args "
fi

if test x$1 = x--valgrind; then
  shift
  EXEC="valgrind $VALGRIND_OPTIONS"   
fi


if [ "$UNINSTALLED" == "yes" ]; then
	$EXEC mono $DEBUG $MONO_OPTIONS @PWD@/@TOOL@ $@
else
	$EXEC mono $DEBUG $MONO_OPTIONS @moondir@/@TOOL@ $@
fi
