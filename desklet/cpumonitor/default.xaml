<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Desklet.CpuMonitorPanel;assembly=monitor.dll"
	Loaded="PageLoaded" Width="156" Height="156">

	<Canvas.Resources>
		<Storyboard x:Name="run">
    	</Storyboard>
	    <Storyboard x:Name="color_sb">
			<ColorAnimation x:Name="color_anim"
				Storyboard.TargetName="CircleBrush"
				Storyboard.TargetProperty="Color"
				To="Gray" Duration="0:0:1" />
	    </Storyboard>
    </Canvas.Resources>
	
	<Ellipse
		x:Name="Circle"
		Stroke="Black"
		StrokeThickness="4"
		Canvas.Left="3"
		Canvas.Top="3"
		Width="80" Height="80">

		<Rectangle.Fill>
			<SolidColorBrush x:Name="CircleBrush" Color="Green" />
		</Rectangle.Fill>
	</Ellipse>

	<TextBlock
		x:Name="Load"
		Text="34%"
		FontSize="20"
		FontWeight="Bold"
		Foreground="Black"
		Canvas.Left="30"
		Canvas.Top="30"/>
</Canvas>
